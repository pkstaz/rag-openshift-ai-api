# =============================================================================
# RAG OpenShift AI API - Environment Variables Example
# =============================================================================
# Copy this file to .env and modify the values as needed
# =============================================================================

# API Configuration
API_TITLE=RAG OpenShift AI API
API_VERSION=0.1.0
API_DESCRIPTION=RAG agent for OpenShift AI
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=INFO
API_DEBUG=false
API_CORS_ORIGINS=["*"]
API_CORS_METHODS=["GET", "POST", "PUT", "DELETE"]

# Elasticsearch Configuration
ES_URL=http://localhost:9200
ES_INDEX_NAME=rag_documents
ES_USERNAME=elastic
ES_PASSWORD=changeme
ES_TIMEOUT=30
ES_RETRY_ON_TIMEOUT=true
ES_MAX_RETRIES=3
ES_VECTOR_DIMENSION=384

# vLLM Configuration
VLLM_URL=http://localhost:8001
VLLM_MODEL_NAME=microsoft/DialoGPT-medium
VLLM_TIMEOUT=60
VLLM_MAX_RETRIES=3
VLLM_TEMPERATURE=0.7
VLLM_MAX_TOKENS=512
VLLM_TOP_P=0.9
VLLM_TOP_K=50

# Embedding Configuration
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32
EMBEDDING_NORMALIZE_EMBEDDINGS=true

# RAG Configuration
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_SEARCH_TYPE=vector
RAG_INCLUDE_METADATA=true
RAG_INCLUDE_SOURCES=true
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200

# Environment Configuration
ENV_ENVIRONMENT=development
ENV_METRICS_ENABLED=true
ENV_SECRET_KEY=your-secret-key-change-in-production
ENV_ALGORITHM=HS256
ENV_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# OpenShift Specific Variables (for production deployment)
# =============================================================================

# Elasticsearch (OpenShift)
# ES_URL=https://elasticsearch-cluster-openshift-elasticsearch.apps.cluster.example.com
# ES_USERNAME=kibana
# ES_PASSWORD=your-elasticsearch-password

# vLLM (OpenShift)
# VLLM_URL=https://vllm-service-openshift-ai.apps.cluster.example.com
# VLLM_MODEL_NAME=microsoft/DialoGPT-medium

# API (OpenShift)
# API_HOST=0.0.0.0
# API_PORT=8080
# API_CORS_ORIGINS=["https://your-frontend.apps.cluster.example.com"]

# =============================================================================
# Development Variables
# =============================================================================

# For local development
# ES_URL=http://localhost:9200
# VLLM_URL=http://localhost:8001

# =============================================================================
# OpenShift Deployment Notes
# =============================================================================
# In OpenShift, these variables will be injected via:
# - ConfigMap: for non-sensitive configuration
# - Secret: for sensitive data (passwords, tokens)
#
# Example ConfigMap:
# apiVersion: v1
# kind: ConfigMap
# metadata:
#   name: rag-api-config
# data:
#   API_HOST: "0.0.0.0"
#   API_PORT: "8080"
#   ES_URL: "https://elasticsearch-cluster-openshift-elasticsearch.apps.cluster.example.com"
#   VLLM_URL: "https://vllm-service-openshift-ai.apps.cluster.example.com"
#
# Example Secret:
# apiVersion: v1
# kind: Secret
# metadata:
#   name: rag-api-secrets
# type: Opaque
# data:
#   ES_PASSWORD: <base64-encoded-password>
#   ENV_SECRET_KEY: <base64-encoded-secret> 